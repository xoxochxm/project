<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768" prefWidth="1024" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs211.project.controllers.UserProfileController">
   <children>
      <ImageView fx:id="profilePicImageView" fitHeight="200.0" fitWidth="200.0" layoutX="125.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/default.png" />
         </image>
      </ImageView>
      <Label fx:id="nameLabel" layoutX="352.0" layoutY="60.0" text="NameLabel">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="usernameLabel" layoutX="352.0" layoutY="95.0" text="\@usernameLabel">
         <font>
            <Font size="18.0" />
         </font></Label>
      <Button layoutX="352.0" layoutY="135.0" mnemonicParsing="false" onAction="#onEditProfileBtnClick" prefHeight="35.0" prefWidth="135.0" text="Edit User Info">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button layoutX="423.0" layoutY="676.0" mnemonicParsing="false" onAction="#onCreateEventBtnClick" prefHeight="40.0" prefWidth="178.0" text="Create New Event">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button layoutX="18.0" layoutY="20.0" mnemonicParsing="false" onAction="#eventsBtnClick" text="Back">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <TableView fx:id="myEventTableview" layoutX="80.0" layoutY="315.0" prefHeight="346.0" prefWidth="863.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
      <Button layoutX="352.0" layoutY="190.0" mnemonicParsing="false" onAction="#joinedEventBtnClick" text="Joined Event">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label layoutX="472.0" layoutY="277.0" text="My Event">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
